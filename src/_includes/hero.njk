{#
  Mobile-first Hero Component
  - sm: Full background image, centered content
  - md+: Two-panel layout (image right, content left)
#}
<section class="relative min-h-screen flex items-center justify-center bg-gray-900">
  <!-- Background image for sm, hidden at md+ -->
  <div class="absolute inset-0 bg-cover bg-center md:hidden" style="background-image: url('{{ '/assets/images/herobkg.webp' | url | safe }}');"></div>
  <div class="absolute inset-0 bg-taupe bg-opacity-70 md:hidden"></div>
  <div class="relative z-10 text-center text-white px-6 py-16 md:hidden">
  <h1 class="text-4xl mb-8 font-thin font-lexendTera uppercase tracking-tight">{{ hero_title | safe }}</h1>
  <h2 class="text-2xl font-thin mb-6 leading-tight font-lexendTera uppercase tracking-tight">{{ hero_subtitle | safe }}</h2>
    <div class="inline-flex flex-col gap-4 sm:flex-row sm:gap-2 justify-center">
  <button class="px-6 py-2 bg-taupe hover:bg-reseda font-bold text-white rounded shadow transition">{{ hero_button1 }}</button>
  <a href="#about"><button class="px-6 py-2 bg-indigo-200 bg-opacity-75 hover:bg-opacity-100 border-2 border-indigo-700 rounded font-bold text-indigo-800 shadow transition">{{ hero_button2 }}</button></a>
    </div>
  </div>

  <!-- md+ breakpoint: two-panel layout, image right -->
  <div class="hidden md:flex w-full min-h-screen">
    <!-- Left: Content -->
    <div class="w-1/2 flex flex-col justify-center items-start px-12 py-16 bg-khaki ">
      <h1 class="text-4xl text-center font-thin mb-10 text-black font-lexendTera uppercase tracking-tight">{{ hero_title | safe }}</h1>
      <p class="mb-8 text-lg font-lexendTera uppercase  text-white text-opacity-60">{{ hero_subtitle | safe }}</p>
      <div class="flex gap-4">
        <a href="#" class="px-6 py-2 bg-taupe hover:bg-reseda text-white font-mono tracking-widest rounded shadow transition">{{ hero_button1 }}</a>
        <a href="#" class="px-6 py-2 border-2 border-taupe text-taupe font-mono tracking-widest rounded shadow transition">{{ hero_button2 }}</a>
      </div>
    </div>
    <!-- Right: Image -->
  <div class="w-1/2 min-h-screen h-full bg-cover bg-center relative" style="background-image: url('{{ '/assets/images/herobkg.webp' | url | safe }}');">
    <div class="absolute inset-0 bg-taupe bg-opacity-70"></div>
  </div>
  </div>
</section>
